<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
            <layout class="com.example.personmanagement.config.mask.PatternMaskingLayout">
                <maskPattern>(\w+@\w+\.\w+)</maskPattern>
                <maskPattern>\"*[^\.]password\"*\s*[(:?)|(=?)]\s*\"*(\w*)</maskPattern>
                <maskPattern>\"*salary\"*\s*[(:?)|(=?)]\s*\"*(\w*)</maskPattern>
                <pattern>%d{dd/MM/yyyy HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n%ex</pattern>-->
            </layout>
        </encoder>
    </appender>

    <property name="LOG_DIR" value="src/main/resources/logs" />
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/logFile.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- daily rollover -->
            <fileNamePattern>${LOG_DIR}/logFile.%d{yyyy-MM-dd}.log</fileNamePattern>
            <!-- keep 1 days' worth of history -->
            <maxHistory>7</maxHistory>
            <totalSizeCap>10MB</totalSizeCap>
        </rollingPolicy>

        <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
            <layout class="com.example.personmanagement.config.mask.PatternMaskingLayout">
                <maskPattern>(\w+@\w+\.\w+)</maskPattern>
                <maskPattern>\"*[^\.]password\"*\s*[(:?)|(=?)]\s*\"*(\w*)</maskPattern>
                <maskPattern>\"*salary\"*\s*[(:?)|(=?)]\s*\"*(\w*)</maskPattern>
                <pattern>%d{HH:mm:ss.SSS}  %-4relative [%thread] %-5level %logger{35} - %msg%n</pattern>
            </layout>
        </encoder>
    </appender>

    <root level="info" additivity="false">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FILE"/>
    </root>

</configuration>